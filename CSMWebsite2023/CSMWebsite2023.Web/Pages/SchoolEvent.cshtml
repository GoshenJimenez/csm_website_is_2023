@page "/school-events/{id}"
@model CSMWebsite2023.Web.Pages.SchoolEvent
@{
}


@{
    if (Model.SchoolEventItem != null)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="/users/@(Model.SchoolEventItem).png" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">@Html.Raw(Model.SchoolEventItem.Description)</p>
            </div>
        </div>
    }
}