@page "/schoolads/{id}"
@model CSMWebsite2023.Web.Pages.SchoolAds
@{
}


@{
    if (Model.SchoolAdItem != null)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@(Model.SchoolAdItem.ArticleImage)" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@Model.SchoolAdItem.Title</h5>
                <p class="card-text">@Model.SchoolAdItem.Description</p>
            </div>
        </div>
    }
}