@page "/manage/schoolAds"
@model CSMWebsite2023.Web.Pages.Manage.SchoolAds.Index
@{
}

<h2>v</h2>
<a href="~/manage/SchoolAd/create" class="btn btn-success">Create New</a>
@{
    if (Model.SchoolAdItem != null)
    {
        
        if (Model.SchoolAdItem.IsActive == true)
        {
            <a href="~/manage/schoolAds?isActive=false" class="btn btn-success">View Inactive</a>
        }
        else
        {
            <a href="~/manage/schoolAds?isActive=true" class="btn btn-success">View Active</a>
        }

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var search in Model.SchoolAdItem.Items)
                    {
                        <tr>
                            <th scope="row">@search.Title</th>
                            <td><a href="~/manage/schoolAds/update/@search.Id" class="btn btn-secondary">Update</a></td>
                            <td>
                                @{
                                    if (search.IsActive == true)
                                    {
                                        <a href="~/manage/schoolAds/delete/@search.Id" class="btn btn-danger">Delete</a>
                                    }
                                    else
                                    {
                                        <a href="~/manage/schoolAds/restore/@search.Id" class="btn btn-success">Restore</a>
                                    }
                                }
                            </td>
                        </tr>
                    }
               }           
            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @{
                    if (Model.SchoolAdItem.PageIndex > 1)
                    {
                        <li class="page-item"><a class="page-link" href="~/manage/schoolAds?isActive=@(Model.SchoolAdItem.IsActive)&pageIndex=@(Model.SchoolAdItem.PageIndex-1)&pageSize=@(Model.SchoolAdItem.PageSize)">Previous</a></li>
                    }
                }
                <li class="page-item"><a class="page-link" href="">@Model.SchoolAdItem.PageIndex of @Model.SchoolAdItem.PageCount</a></li>
                @{
                    if (Model.SchoolAdItem.PageCount > Model.SchoolAdItem.PageIndex)
                    {
                        <li class="page-item"><a class="page-link" href="~/manage/schoolAds?isActive=@(Model.SchoolAdItem.IsActive)&pageIndex=@(Model.SchoolAdItem.PageIndex+1)&pageSize=@(Model.SchoolAdItem.PageSize)">Next</a></li>
                    }
                }
            </ul>
        </nav>
    }
}